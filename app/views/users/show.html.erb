<% if user_signed_in? %>
<% postCount = 0 %>
<% @posts.each do |post| %>
  <% if @user.id ==  post.user_id%>
    <% postCount += 1 %>
  <% end %>
<% end %>

<% followerCount = 0 %>
<% @connections.each do |connection| %>
  <% if @user.id ==  connection.following_id%>
    <% followerCount += 1 %>
  <% end %>
<% end %>


<% followingCount = 0 %>
<% @connections.each do |connection| %>
  <% if @user.id ==  connection.user_id %>
    <% followingCount += 1 %>
  <% end %>
<% end %>


<div class="bodyleft bodyright ">
  <div class="displayPhoto">

    <% if @user.photo_id !=  nil %>
      <img src="<%= Photo.find_by(id: @user.photo_id).url %>" height="75" width="75">
    <% else %>
      <img src="https://robohash.org/'+#{ @user.username}+'?set=set3>" height="75" width="75">
    <% end %>


  </div>
  <div class="userInfo">
    <div>
      <span class="userName"><%= @user.username %></span>
    </div>
    <div>
      <div class='inBlock'>
        <span class='strong'><%=  postCount %></span>
        <span> Posts</span>
      </div>
      <div class='inBlock'>
        <span class='strong'><%= followerCount %></span>
        <span> Followers</span>
      </div>
      <div class='inBlock'>
        <span class='strong'><%= followingCount  %></span>
        <span> Following</span>
      </div>
    </div>
    <div>
      <p><%= @user.name %></p>
    </div>
  </div>
</div>


<% if postCount == 0 %>
  <div class="bodyleft bodyright ">

      <div class='postdiv'>
          <p class='center padDown'>This Users has no posts yet</p>
      </div>
    </div>

<% else %>


